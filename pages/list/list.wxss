.video_container{
  padding:25rpx;
}
.type-item{
  border-radius: 10rpx;
  position: relative;
}

.type-item + .type-item{
  margin-top: 20rpx;
}

.type-img{
  width: 100%;
  height: 290rpx;
  border-radius: 10rpx;
  display: block;
}

.title{
  display: flex;
  flex-direction: row;
  padding-top: 10px;
}

.title text{
  left: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 100%;
}

.dingdan{
  display: flex;
  flex-direction: row;
}

.dingdan text{
  left: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 50%;
  padding-top: 5px;
}

.btn{
  right: 10rpx;
  width: 100px;
  background-color:#FF5722;
  height: 28px;
  border-radius: 25rpx;
  font-size: 14px;
  text-align: center;
  color: white;
}
.btn1{
  right: 10rpx;
  width: 100px;
  background-color:rgb(34, 49, 255);
  height: 28px;
  border-radius: 25rpx;
  font-size: 14px;
  text-align: center;
  color: white;
}

.listimg{
  display: flex;
  flex-direction: row;
  overflow:auto;
}
.listimg image{
    width: 150rpx;
    height: 150rpx;
    
    margin-right: 20rpx;
    flex-shrink: 0;
    border-radius: 10rpx;
}
